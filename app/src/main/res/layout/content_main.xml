<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.napestar.palindrom.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Palindrom?"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.089" />

    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="242dp"
        android:layout_height="49dp"
        android:layout_marginTop="32dp"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/checkBtn"
        app:layout_constraintTop_toBottomOf="@+id/checkBtn" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="122dp"
        android:layout_height="39dp"
        android:layout_marginTop="24dp"
        android:text="Eingabe String:"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        tools:layout_editor_absoluteX="53dp" />

    <Button
        android:id="@+id/checkBtn"
        android:layout_width="217dp"
        android:layout_height="47dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="36dp"
        android:text="Check String"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/stringText"
        android:layout_width="139dp"
        android:layout_height="39dp"
        android:ems="10"
        android:hint="String >= 5 Zeichen"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/textView1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView2" />

</android.support.constraint.ConstraintLayout>
